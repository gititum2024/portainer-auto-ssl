{$DOMAIN} {
    # TLS/HTTPS is automatic
    tls {$EMAIL}

    # Handle /portainer path
    route /portainer/* {
        rewrite * /{path} 
        reverse_proxy portainer:9000 {
            header_up X-Forwarded-Prefix /portainer
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Redirect root to /portainer
    redir / /portainer 301
}
