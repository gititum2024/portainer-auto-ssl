{
    email admin@{$DOMAIN}
}

{$DOMAIN} {
    log {
        output file /data/access.log
        format console
    }

    # Handle /portainer path - improved path handling
    handle /portainer* {
        uri strip_prefix /portainer
        reverse_proxy portainer:9000 {
            header_up X-Forwarded-Prefix "/portainer"
        }
    }

    # Handle other paths
    handle {
        respond "Portainer is available at /portainer"
    }
}
